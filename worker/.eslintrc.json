{
  "env": {
    "es2022": true,
    "node": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "globals": {
    "addEventListener": "readonly",
    "Request": "readonly",
    "Response": "readonly",
    "Headers": "readonly",
    "URL": "readonly",
    "URLSearchParams": "readonly",
    "ReadableStream": "readonly",
    "crypto": "readonly",
    "console": "readonly"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error", "log"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error"
  }
}